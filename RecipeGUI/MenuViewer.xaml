<Window x:Class="RecipeGUI.MenuViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeGUI"
        mc:Ignorable="d"
        Title="MenuViewer" Height="450" Width="800">
    <Grid>
        <Label x:Name="Title" Content="Menu Name" Margin="20,24,440,0" VerticalAlignment="Top" Height="50" FontSize="26" Background="#FFBDE3FF" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lSteps" Content="Steps" Margin="480,24,220,374"/>
        <Label x:Name="lCalories" Content="Calories" Margin="380,24,320,371"/>
        <RichTextBox Margin="20,99,440,118">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
